---
layout: nil
---
<?xml version="1.0"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title }}</title>
    <link>{{ site.url }}</link>
    <atom:link href="http://example.com/rss.xml" rel="self" type="application/rss+xml" />
    <description>{{ site.tagline }}</description>
    <language>it-it</language>
    <pubDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>

    {% for post in site.posts limit:50 %}
    <item>
      {% if post.layout == "link" %}
        <title>{{ post.title }}</title>
        <link>{{ post.origlink }}</link>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <author>dottorblaster@gmail.com (Alessio Biancalana)</author>
        <guid>http://dottorblaster.it{{ post.id }}</guid>
        <description><![CDATA[ {{ post.content }} <p><a href="http://dottorblaster.it{{ post.url }}">â˜…</a></p>]]></description>
      {% else %}
        <title>{{ post.title }}</title>
        <link>http://dottorblaster.it{{ post.url }}</link>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <author>dottorblaster@gmail.com (Alessio Biancalana)</author>
        <guid>http://dottorblaster.it{{ post.id }}</guid>
        <description>{{ post.content | xml_escape }}</description>
      {% endif %}
    </item>
    {% endfor %}

  </channel> 
</rss>
